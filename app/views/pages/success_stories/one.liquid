---
title: Return a success story
published: true
response_type: application/json
handle: api_success_story
---
{% with_scope _slug: params.slug %}
{% assign success_story = contents.success_stories.first %}
{% endwith_scope %}
{
  "success_story": [
    {
      "title": {{ success_story.title | json }},
      "slug": {{ success_story._slug | json }},
      "before_image": {
        "url": {{ success_story.before_image.url | prepend: host | prepend: "http://" | json }}
      },
      "after_image": {
        "url": {{ success_story.after_image.url | prepend: host | prepend: "http://" | json }}
      }
    }
  ]
}