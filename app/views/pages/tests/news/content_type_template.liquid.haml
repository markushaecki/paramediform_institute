---
title: Template of a news
listed: false
published: true
content_type: news
---
{% extends parent %}

{% block content %}

%ul.pager
  %li.previous
    %a{ href: "/tests/news?page={{ params.page }}" } &larr; Back

{% if news.interview %}

{% assign interview = news.interview %}

/ # INTERVIEW

{% if interview.person %}

/ # INTERVIEW: PERSON
.media
  .pull-left
    %img.media-object{ src: "{{ interview.person.picture.url | resize: '90x90#' }}" }
  .media-body
    %h4 {{ interview.person.name }}
    %p {{ interview.person.title }}

%br

{% endif %}

/ # INTERVIEW: TAGS + DATE

.pull-right
  {{ news.published_at | localized_date: '%d.%m.%Y' }}

{% if news.tags %}
.tags
  %span.glyphicon.glyphicon-tags
  {% for tag in news.tags %}
  %span.label.label-primary {{ tag }}
  &nbsp;
  {% endfor %}
{% endif %}

%hr.clearfix

/ # INTERVIEW: QUESTIONS + ANSWERS

{% for question in interview.questions %}

%h5 {{ question.question }}

.text.text-justify
  {{ question.answer }}

%hr

{% endfor %}

{% else %}

/ # UNSUPPORTED

.well
  %h2 Unsupported type of news

{% endif %}

{% endblock %}